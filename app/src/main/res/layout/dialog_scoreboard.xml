<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/dialog_scoreboard_bg"
        android:id="@+id/dialogScoreboardBg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="110dp"
        android:text="000"
        android:textSize="40sp"
        android:id="@+id/txtDialogScoreboardScore"/>

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_alignBottom="@id/dialogScoreboardBg"
        android:layout_marginBottom="150dp"
        android:contentDescription="ReplayButton"
        android:src="@drawable/dialog_scoreboard_replay"
        android:background="@android:color/transparent"
        android:id="@+id/btnDialogScoreboardReplay" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/dialogScoreboardBg"
        android:layout_marginBottom="150dp"
        android:contentDescription="HomeButton"
        android:src="@drawable/dialog_scoreboard_home"
        android:background="@android:color/transparent"
        android:id="@+id/btnDialogScoreboardHome" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/dialogScoreboardBg"
        android:layout_marginBottom="150dp"
        android:contentDescription="HomeButton"
        android:src="@drawable/dialog_scoreboard_totem"
        android:background="@android:color/transparent"
        android:id="@+id/btnDialogScoreboardTotem"
        android:visibility="gone"/>

</RelativeLayout>