<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024dp"
    android:layout_height="768dp"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog_resetdata_bg">

    </ImageView>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dialog_resetdata_yes"
        android:background="@android:color/transparent"
        android:src="@drawable/dialog_resetdata_yes"
        android:layout_marginLeft="300dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="500dp"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dialog_resetdata_no"
        android:background="@android:color/transparent"
        android:src="@drawable/dialog_resetdata_no"
        android:layout_marginLeft="620dp"
        android:layout_marginStart="620dp"
        android:layout_marginTop="500dp"
        android:scaleType="fitCenter"/>

</RelativeLayout>