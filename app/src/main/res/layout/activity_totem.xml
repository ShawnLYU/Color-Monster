<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp" tools:context=".TotemActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/totem_background"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/xiaozhi_profile"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="總積分: "
        android:textColor="#fff"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="189dp"
        android:layout_marginEnd="189dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/totem_total_score"
        android:textColor="#fff"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"/>

    <TextView
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:textColor="#ee5b00"
        android:layout_marginLeft="330dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="530dp"
        android:gravity="center_vertical"
        android:id="@+id/totem_story"/>
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/btn_start"
        android:layout_marginLeft="600dp"
        android:layout_marginStart="600dp"
        android:layout_marginTop="640dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:id="@+id/totem_btn_next"/>

    <ImageView
        android:layout_width="252dp"
        android:layout_height="92dp"
        android:src="@drawable/totem_green"
        android:id="@+id/totem1"
        android:layout_marginTop="608dp"
        android:layout_marginLeft="740dp"
        android:layout_marginStart="740dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="174dp"
        android:layout_height="125dp"
        android:src="@drawable/totem_blue"
        android:id="@+id/totem2"
        android:layout_marginTop="486dp"
        android:layout_marginLeft="778dp"
        android:layout_marginStart="778dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="147dp"
        android:layout_height="112dp"
        android:src="@drawable/totem_black"
        android:id="@+id/totem3"
        android:layout_marginTop="378dp"
        android:layout_marginLeft="795dp"
        android:layout_marginStart="795dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="216dp"
        android:layout_height="114dp"
        android:src="@drawable/totem_yellow"
        android:id="@+id/totem4"
        android:layout_marginTop="266dp"
        android:layout_marginLeft="758dp"
        android:layout_marginStart="758dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="252dp"
        android:layout_height="154dp"
        android:src="@drawable/totem_red"
        android:id="@+id/totem5"
        android:layout_marginTop="116dp"
        android:layout_marginLeft="741dp"
        android:layout_marginStart="741dp"
        android:visibility="invisible"/>

</RelativeLayout>
